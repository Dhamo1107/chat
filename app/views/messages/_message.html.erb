
<% if message.sender == current_user %>
  <div class="message message-sent">
    <p style="text-align: right"><%= message.content %></p>
    <p style="text-align: right; font-size: x-small" ><%= message.created_at.strftime('%b %e, %Y at %I:%M %p') %></p>
  </div>
<% else %>
  <div class="message message-received">
    <p><%= message.content %></p>
    <p style="font-size: x-small"><%= message.created_at.strftime('%b %e, %Y at %I:%M %p') %></p>
  </div>
<% end %>


<style>
    .message {
        padding: 5px;
        margin-bottom: 10px;
        border-radius: 10px;
    }

    .message-sent {
        background-color: #c8def5;
        color: black;
    }

    .message-received {
        background-color: #f1f0f0;
        color: black;
    }

    .message-sent p {
        text-align: right;
        margin: 0;
    }

    .message-received p {
        margin: 0;
    }

</style>